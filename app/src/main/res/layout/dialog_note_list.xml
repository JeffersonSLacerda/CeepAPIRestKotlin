<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
                name="viewModel"
                type="com.rav.test.ceep.ui.note.dialog.NoteListDialogViewModel"/>
        <variable
                name="note"
                type="com.rav.test.ceep.data.model.Note"/>
    </data>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp">

        <LinearLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textAllCaps="true"
                    android:text="@string/add_note"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="5dp"/>

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/form_note_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:hint="@string/title"
                    android:text="@={note.title}"/>

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/form_note_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:hint="@string/description"
                    android:text="@={note.description}"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                <TextView
                        android:layout_weight="2"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/cancel"
                        android:textAllCaps="true"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:onClick="@{() -> viewModel.closeClick()}"/>

                <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sendButton"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textSize="14sp"
                        android:text="@string/send"
                        android:textAllCaps="true"
                        android:onClick="@{() -> viewModel.sendNoteClick()}"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>